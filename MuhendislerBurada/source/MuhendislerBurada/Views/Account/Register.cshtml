@model MuhendislerBurada.Models.RegisterViewModel
@{
    ViewBag.Title = "Kayıt ol";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

<link href="/Content/CustomStyles.css" rel="stylesheet" type="text/css" />

<div class="navbar navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="brand" href='@Url.Action("Index", "Home")'>MB</a>
        </div>
    </div>
</div>

<div class="container margin-top">
    <div class="row-fluid">



        <div class="span4 row-fluid">
            <div class="row">
                <div class="col-md-8 well">
                    <section id="registerForm">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Yeni hesap oluştur.</h4>
                            <hr />
                            @Html.ValidationSummary()
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, "Ad", new { @class = "col-md-2 control-label", style = "text-align: left;width:80px;" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                </div>
                            </div>
                            <br/>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, "Şifre", new { @class = "col-md-2 control-label", style = "text-align: left;width:80px;" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <br/>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, "Tekrar", new { @class = "col-md-2 control-label", style = "text-align: left;width:80px;" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <br/>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Kayıt ol" />
                                </div>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

