            </td>
        </tr>
    </table>
    <br />
    <div id="divDelete@(Model.GoalId)">
    </div>
    @using (Html.BeginForm())
    {
        <p>
            <button class="btn btn-danger" type="submit" value="Sil">
                Sil</button>
                 <button class="btn" type="reset" value="İptal" onclick="window.location.href='@Url.Action("Index", "Goal", new { id = @Model.GoalId })'">
