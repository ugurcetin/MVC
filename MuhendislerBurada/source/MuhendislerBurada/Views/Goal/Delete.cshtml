    <strong >@Html.DisplayFor(model => model.GoalName)</strong>
    <table>
        <tr >
            <td class="display-label">
                İlan başlığı:
            </td>
            <td class="display-field">
            &nbsp;&nbsp;&nbsp;
                @Html.DisplayFor(model => model.GoalName)
            </td>
        </tr>
        <tr>
            <td class="display-label">
                İlan açıklaması:
            </td>
            <td class="display-field">
