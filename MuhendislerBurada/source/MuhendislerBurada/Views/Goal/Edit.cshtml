<div class ="span12 well">
@using (Html.BeginForm())
{
       @Html.ValidationSummary(true)

    <fieldset>
         <h4>İlanı düzenle</h4>
        @Html.HiddenFor(model => model.GoalId)
        <table class ="table">
            <tr>
                <td>
                    @Html.LabelFor(model => model.GoalName, "İlan başlığı")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.GoalName, new { @class ="span11" })
                    @Html.ValidationMessageFor(model => model.GoalName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Desc, "Açıklama")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Desc, new { @class ="span11" })
                    @Html.ValidationMessageFor(model => model.Desc)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.StartDate, "Başlangıç tarihi")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.StartDate,String.Format("{0:dd-MMM-yyyy}", Model.StartDate), new { @class = "ui-datepicker span11",@readonly="readonly"})
                    @Html.ValidationMessageFor(model => model.StartDate)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.EndDate, "Bitiş tarihi")
                </td>
                <td >
                    @Html.TextBoxFor(model => model.EndDate, String.Format("{0:dd-MMM-yyyy}", Model.EndDate), new { @class = "ui-datepicker span11", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.EndDate)
                </td>
            </tr>

           
            <tr>
                <td >
                    @Html.LabelFor(model => model.Target, "Alım sayısı")
                </td>
                <td >
                    @Html.TextBoxFor(model => model.Target, new { @class ="span11" })
                    @Html.ValidationMessageFor(model => model.Target)
                </td>
                <td>
                    @Html.Hidden("UserId", User.Identity.GetUserId())
                </td>
            </tr>

        </table>
        <button class="btn btn-primary" type="submit" value="Kaydet" onclick ="editSave(@Model.GoalId)" >
            Kaydet</button>
             <button class="btn" type ="reset" value="İptal" onclick="window.location.href='@Url.Action("Index", "Goal", new {id =@Model.GoalId })'">
        İptal</button>
    </fieldset>
    
    <div id="divEdit@(Model.GoalId)">
    </div> 
}

</div>
