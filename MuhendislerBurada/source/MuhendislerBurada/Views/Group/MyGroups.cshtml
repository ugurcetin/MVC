@model IEnumerable<MuhendislerBurada.Model.Models.Group>
@{
    ViewBag.Title = "MyGroups";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}
@if (Model.Count() == 0)
{
    <div class="alert alert-info">
        Yok
    </div>
}
@foreach (var item in Model)
{ 
    <div class="alert users span2">
        <h4>
           @Html.ActionLink(item.GroupName, "Index", "Group", new { id = item.GroupId },null)</h4>
        @Html.ActionLink(@Html.Action("NoOfUsers", new { id = @item.GroupId }) + " Üyeler", "JoinedUsers", new { id = @item.GroupId }, null)
    </div>
}
